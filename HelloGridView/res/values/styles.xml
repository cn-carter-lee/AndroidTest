<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="root_layout_style">
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="so_current_navbar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/send_nav_border</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="so_current_navbar_tip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="so_current_navbar_item" parent="android:Widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/so_nav_txt</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginRight">10sp</item>
        <item name="android:paddingTop">2sp</item>
        <item name="android:paddingBottom">2sp</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:paddingRight">10sp</item>
        <item name="android:textColor">@color/nav_txt</item>
    </style>

    <style name="header_title" parent="android:Widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:text">@string/nav_send_person</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="VersionDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="loading_small" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@anim/loading</item>
        <item name="android:layout_width">21dip</item>
        <item name="android:layout_height">21dip</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="waitinging_small">
        <item name="android:indeterminateDrawable">@anim/waiting</item>
        <item name="android:layout_width">21dip</item>
        <item name="android:layout_height">21dip</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="waitinging_black">
        <item name="android:indeterminateDrawable">@anim/waiting_black</item>
        <item name="android:layout_width">21dip</item>
        <item name="android:layout_height">21dip</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="frame_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/frame_button_bg</item>
        <item name="android:textColor">@drawable/frame_button_txt</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="mixed_person_wrapper">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">0dip</item>
    </style>

    <style name="frame_button_seperator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/image_content</item>
        <item name="android:background">@drawable/frame_seperator</item>
    </style>

    <style name="widget_listview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:dividerHeight">17dip</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:divider">@color/container</item>
        <item name="android:scrollingCache">false</item>
    </style>

    <style name="product_listview_base">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:dividerHeight">8dip</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:divider">@color/container</item>
        <item name="android:scrollingCache">false</item>
    </style>

    <style name="favorite_listview" parent="product_listview_base"></style>

    <style name="widget_product_listview" parent="product_listview_base"></style>

    <style name="widget_search_listview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:dividerHeight">0dip</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:background">#e4e4e4</item>
        <item name="android:scrollingCache">false</item>
    </style>

    <style name="search_widget_listview_row_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dip</item>
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingTop">10dip</item>
    </style>

    <style name="search_widget_listview_row_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:onClick">clickSearchItem</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="main_srcoll_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="footer_container">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">3dip</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="footer_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="footer_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@drawable/footer_text_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="product_root">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/product_item_border</item>
    </style>

    <style name="product_sub_root">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/p_sub_border_bg</item>
    </style>

    <style name="product_image">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">1px</item>
        <item name="android:layout_marginTop">1px</item>
        <item name="android:layout_weight">30</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="product_sub_image">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:onClick">clickProductDetails</item>
    </style>

    <style name="product_sub_favorite_box">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/p_sub_left_border_bg</item>
    </style>

    <style name="product_info">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">68</item>
    </style>

    <style name="product_right_item_base"></style>

    <style name="product_tags" parent="product_right_item_base">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:dividerHeight">17dip</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:divider">@color/container</item>
        <item name="android:scrollingCache">false</item>
    </style>

    <style name="product_name" parent="product_right_item_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">clickProductDetails</item>
        <item name="android:textColor">@color/product_name</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingTop">6dip</item>
    </style>

    <style name="product_tag">
        <item name="android:textColor">@color/tag</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dip</item>
        <item name="android:background">@drawable/bg_btn_product_order</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="sub_product_tags" parent="product_right_item_base">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:dividerHeight">17dip</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:divider">@color/container</item>
        <item name="android:scrollingCache">false</item>
    </style>

    <style name="product_tag1">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dip</item>
        <item name="android:background">@drawable/p_sub_tag1</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="product_tag2">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dip</item>
        <item name="android:background">@drawable/p_sub_tag2</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="product_price" parent="product_right_item_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dip</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="product_add_favorite" parent="android:Widget">
        <item name="android:textColor">@color/product_name</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/bg_btn_favorite_add</item>
        <item name="android:onClick">addFavoriteProduct</item>
        <item name="android:paddingLeft">25dip</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginBottom">15px</item>
    </style>

    <style name="product_added_favorite">
        <item name="android:background">@drawable/bg_btn_favorite_added</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingLeft">25dip</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginBottom">15px</item>
    </style>

    <style name="product_details">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/so_btn_details_bg </item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:text">@string/btn_product_detail</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginBottom">15px</item>
    </style>

    <style name="product_sub_name" parent="product_right_item_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/product_name</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="product_sub_price" parent="product_right_item_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dip</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="product_sub_sale" parent="product_right_item_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dip</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="p_sub_margin_r_l">
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
    </style>

    <style name="lv_seperator">
        <item name="android:background">#2d313a</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dip</item>
    </style>

    <style name="lv_menu_item">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/more_btn_background</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:drawablePadding">20dp</item>
    </style>

</resources>