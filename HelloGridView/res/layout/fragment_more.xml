<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.liwuso.ui.MoreActivity$MoreHomeFragment" >

    <Button
        android:id="@+id/btnAbout"
        style="@style/GiftMoreButton"
        android:layout_marginTop="10dp"
        android:onClick="clickMore"
        android:text="关于礼物搜" />

    <Button
        android:id="@+id/btnQuestion"
        style="@style/GiftMoreButton"
        android:layout_below="@+id/btnAbout"
        android:layout_marginTop="1dp"
        android:onClick="clickMore"
        android:text="常见问题" />

    <Button
        android:id="@+id/btnAgreement"
        style="@style/GiftMoreButton"
        android:layout_below="@+id/btnQuestion"
        android:layout_marginTop="1dp"
        android:onClick="clickMore"
        android:text="用户协议" />

    <Button
        android:id="@+id/btnAdvice"
        style="@style/GiftMoreButton"
        android:layout_below="@+id/btnAgreement"
        android:layout_marginTop="30dp"
        android:onClick="clickMore"
        android:text="意见建议" />

    <Button
        android:id="@+id/btnContact"
        style="@style/GiftMoreButton"
        android:layout_below="@+id/btnAdvice"
        android:layout_marginTop="1dp"
        android:background="@drawable/more_btn_background"
        android:onClick="clickMore"
        android:text="联系我们" />

    <Button
        android:id="@+id/btnCheckVertion"
        style="@style/GiftMoreButton"
        android:layout_below="@+id/btnContact"
        android:layout_marginTop="30dp"
        android:onClick="checkVersion"
        android:text="检测新版本" />

</RelativeLayout>