<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pys.hellogridview.MoreActivity$MoreHomeFragment" >

    <Button
        android:id="@+id/button0"
        style="@style/GiftMoreButton"
        android:layout_marginTop="10dp"
        android:onClick="navigateFragment"
        android:text="关于礼物搜" />

    <Button
        android:id="@+id/button1"
        style="@style/GiftMoreButton"
        android:layout_below="@+id/button0"
        android:layout_marginTop="1dp"
        android:onClick="navigateFragment"
        android:text="常见问题" />

    <Button
        android:id="@+id/button2"
        style="@style/GiftMoreButton"
        android:layout_below="@+id/button1"
        android:layout_marginTop="1dp"
        android:onClick="navigateFragment"
        android:text="用户协议" />

    <Button
        android:id="@+id/button3"
        style="@style/GiftMoreButton"
        android:layout_below="@+id/button2"
        android:onClick="openAdviceFragment"
        android:layout_marginTop="30dp"
        android:text="意见建议" />

    <Button
        android:id="@+id/button4"
        style="@style/GiftMoreButton"
        android:layout_below="@+id/button3"
        android:layout_marginTop="1dp"
        android:background="@drawable/more_button_background"
        android:onClick="navigateFragment"
        android:text="联系我们" />

    <Button
        android:id="@+id/button5"
        style="@style/GiftMoreButton"
        android:layout_below="@+id/button4"
        android:layout_marginTop="30dp"
        android:text="检测新版本" />

</RelativeLayout>