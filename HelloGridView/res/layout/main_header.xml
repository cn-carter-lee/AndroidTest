<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_header_bar"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@color/nav_bg">

    <Button
        android:id="@+id/btnTopNavPre"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/top_nav_btn_pre_selector"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/main_head_progress"
        style="@style/loading_small"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5.0dip" />

    <TextView
        android:id="@+id/navbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/search_sorter"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_spinner_selector"
        android:dropDownHorizontalOffset="0dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:visibility="invisible" />

</RelativeLayout>