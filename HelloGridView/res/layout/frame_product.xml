<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.liwuso.app.ui.SearchProductFrament" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f9f9fa"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingTop="10dip" >

        <TextView
            android:id="@+id/current_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您已经选择:   "
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/current_person"
            style="@style/So.Txt.Nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女朋友 " />

        <TextView
            android:id="@+id/current_age"
            style="@style/So.Txt.Nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13-17岁" />

        <TextView
            android:id="@+id/current_purpose"
            style="@style/So.Txt.Nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生日礼物" />
    </LinearLayout>

    <com.liwuso.app.widget.PullToRefreshListView
        android:id="@+id/frame_listview_product"
        style="@style/widget_listview" />

</LinearLayout>