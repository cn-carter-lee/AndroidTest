<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.liwuso.app.ui.SearchProductFrament" >

    <LinearLayout
        style="@style/so_current_navbar"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/current_nav"
            style="@style/so_current_navbar_tip"
            android:text="@string/so_current_tip" />

        <TextView
            android:id="@+id/txt_so_product_personname"
            style="@style/so_current_navbar_item"
            android:text="女朋友 " />

        <TextView
            android:id="@+id/txt_so_product_agename"
            style="@style/so_current_navbar_item"
            android:text="13-17岁" />

        <TextView
            android:id="@+id/txt_so_product_purposename"
            style="@style/so_current_navbar_item"
            android:text="生日礼物" />
    </LinearLayout>

    <com.liwuso.app.widget.PullToRefreshListView
        android:id="@+id/frame_listview_product"
        style="@style/widget_listview" />

</LinearLayout>