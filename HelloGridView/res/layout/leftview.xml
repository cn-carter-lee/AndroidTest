<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343843"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_gravity="bottom"
        android:text="@string/menu_more"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_more_order"
        style="@style/GiftMoreButton"
        android:layout_marginTop="1dp"
        android:text="@string/menu_more_order" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000" />

    <Button
        android:id="@+id/btn_more_about"
        style="@style/GiftMoreButton"
        android:onClick="clickMore"
        android:text="@string/menu_more_about" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000" />

    <Button
        android:id="@+id/btn_more_question"
        style="@style/GiftMoreButton"
        android:layout_marginTop="1dp"
        android:onClick="clickMore"
        android:text="@string/menu_more_question" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000" />

    <Button
        android:id="@+id/btn_more_agreement"
        style="@style/GiftMoreButton"
        android:layout_marginTop="1dp"
        android:onClick="clickMore"
        android:text="@string/menu_more_agreement" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000" />

    <Button
        android:id="@+id/btn_more_advice"
        style="@style/GiftMoreButton"
        android:onClick="clickMore"
        android:text="@string/menu_more_advice" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000" />

    <Button
        android:id="@+id/btn_more_contact"
        style="@style/GiftMoreButton"
        android:layout_marginTop="1dp"
        android:background="@drawable/more_btn_background"
        android:onClick="clickMore"
        android:text="@string/menu_more_contact" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000" />

    <Button
        android:id="@+id/btn_more_check_vertion"
        style="@style/GiftMoreButton"
        android:layout_marginTop="1dp"
        android:onClick="checkVersion"
        android:text="@string/menu_more_version" />

</LinearLayout>