<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <EditText
            android:id="@+id/editSearchText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/search_edit_background"
            android:hint="@string/search_txt"
            android:padding="8sp"
            android:textSize="15sp" >
        </EditText>

        <Button
            android:id="@+id/btnSearch"
            style="@style/Search.Btn"
            android:layout_width="40dip"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_category_bar"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@drawable/send_nav_border"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="0.5dp" >
    </LinearLayout>

    <com.liwuso.app.widget.PullToRefreshGridView
        android:id="@+id/frame_search_gridview_product"
        style="@style/search_widget_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:horizontalSpacing="1dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="1dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="3dp" >

        <ProgressBar
            android:id="@+id/listview_foot_progress"
            style="@style/waitinging_small" />
    </LinearLayout>

</LinearLayout>