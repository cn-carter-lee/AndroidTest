<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout style="@style/search_widget_listview_row_item" >

        <ImageView
            android:id="@+id/image0"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_gravity="center"
            android:contentDescription="@string/blank"
            android:onClick="clickSearchItem"
            android:src="@drawable/product_blank" />

        <TextView
            android:id="@+id/name0"
            style="@style/search_widget_listview_row_text" />
    </LinearLayout>

    <LinearLayout
        style="@style/search_widget_listview_row_item"
        android:layout_marginLeft="1px"
        android:layout_marginRight="1px" >

        <ImageView
            android:id="@+id/image1"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_gravity="center"
            android:contentDescription="@string/blank"
            android:onClick="clickSearchItem"
            android:src="@drawable/product_blank" />

        <TextView
            android:id="@+id/name1"
            style="@style/search_widget_listview_row_text" />
    </LinearLayout>

    <LinearLayout style="@style/search_widget_listview_row_item" >

        <ImageView
            android:id="@+id/image2"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_gravity="center"
            android:contentDescription="@string/blank"
            android:onClick="clickSearchItem"
            android:src="@drawable/product_blank" />

        <TextView
            android:id="@+id/name2"
            style="@style/search_widget_listview_row_text" />
    </LinearLayout>

</LinearLayout>