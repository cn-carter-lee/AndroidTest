<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Gift.ParentLayoutPadding"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.liwuso.app.ui.PurposeActivity$PlaceholderFragment" >

    <LinearLayout
        style="@style/so_current_navbar"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/current_nav"
            style="@style/so_current_navbar_tip"
            android:text="@string/so_current_tip" />

        <TextView
            android:id="@+id/txt_so_purpose_personname"
            style="@style/so_current_navbar_item"
            android:text="女朋友 " />

        <TextView
            android:id="@+id/txt_so_purpose_agename"
            style="@style/so_current_navbar_item"
            android:text="13-17岁" />
    </LinearLayout>

    <com.liwuso.app.widget.PullToRefreshListView
        android:id="@+id/frame_listview_purpose"
        style="@style/widget_listview" />

</LinearLayout>