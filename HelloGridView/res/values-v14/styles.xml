<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>

    <style name="HomeNoActionBar" parent="Theme.AppCompat.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="GiftTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/GiftActionBarStyle</item>
        <item name="android:actionBarTabTextStyle">@style/GiftActionBarTabText</item>
        <item name="actionBarTabTextStyle">@style/GiftActionBarTabText</item>
    </style>

    <style name="GiftActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:displayOptions">showCustom|showHome|homeAsUp|showTitle</item>
        <item name="displayOptions">showCustom|showHome|homeAsUp|showTitle</item>
        <item name="android:background">#FF8432</item>
        <item name="android:backgroundSplit">#FFFFFF</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="GiftActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GiftMoreButton" parent="android:Widget">
        <item name="android:drawableRight">@drawable/gift_more_button_background_right</item>
        <item name="android:textColor">@drawable/gift_more_button_textcolor</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/gift_more_button_background</item>
    </style>

</resources>