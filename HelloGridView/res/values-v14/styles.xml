<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>

    <style name="Gift.ParentLayoutPadding" parent="android:Widget">
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="Gift.ParentLeftRightPadding" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="HomeNoActionBar" parent="Theme.AppCompat.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="GiftTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/GiftActionBarStyle</item>
        <item name="android:actionBarTabTextStyle">@style/GiftActionBarTabText</item>
        <item name="actionBarTabTextStyle">@style/GiftActionBarTabText</item>
    </style>

    <style name="GiftActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:displayOptions">showCustom|showHome|homeAsUp|showTitle</item>
        <item name="displayOptions">showCustom|showHome|homeAsUp|showTitle</item>
        <item name="android:background">#FF8432</item>
        <item name="android:backgroundSplit">#FFFFFF</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="GiftActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GiftMoreButton" parent="android:Widget">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/more_btn_background</item>
    </style>

    <style name="SoButton" parent="android:Widget">
        <item name="android:textColor">@drawable/so_btn_textcolor</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|center_vertical</item>
    </style>

    <style name="SearchButtonRed" parent="SoButton">
        <item name="android:background">@drawable/btn_red</item>
    </style>

    <style name="SearchButtonBlue" parent="SoButton">
        <item name="android:background">@drawable/btn_blue</item>
    </style>

    <style name="SearchButtonPink" parent="SoButton">
        <item name="android:background">@drawable/btn_pink</item>
    </style>

    <style name="SearchButtonPurple" parent="SoButton">
        <item name="android:background">@drawable/btn_purple</item>
    </style>

    <style name="SearchButtonYellow" parent="SoButton">
        <item name="android:background">@drawable/btn_yellow</item>
    </style>

    <style name="SearchButtonMale1" parent="SoButton">
        <item name="android:background">@drawable/btn_male1</item>
    </style>

    <style name="SearchButtonMale2" parent="SoButton">
        <item name="android:background">@drawable/btn_male2</item>
    </style>

    <style name="SearchButtonMale3" parent="SoButton">
        <item name="android:background">@drawable/btn_male3</item>
    </style>

    <style name="SearchButtonMale4" parent="SoButton">
        <item name="android:background">@drawable/btn_male4</item>
    </style>

    <style name="SearchButtonMale5" parent="SoButton">
        <item name="android:background">@drawable/btn_male5</item>
    </style>

    <style name="Gift.Product.Favorite" parent="android:Widget">
        <item name="android:background">@drawable/bg_btn_product_details</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="Search.Txt" parent="android:Widget"></style>

    <style name="Search.Btn" parent="android:Widget">
        <item name="android:background">@drawable/img_search_btn</item>
    </style>

    <style name="footbar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="main_footbar_radio" parent="footbar">

        <!-- <item name="android:background">@drawable/widget_bar_bg</item> -->
        <item name="android:padding">0dip</item>
    </style>

</resources>