<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>

    <style name="Gift.ParentLayoutPadding" parent="android:Widget">
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="HomeNoActionBar" parent="Theme.AppCompat.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="GiftTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/GiftActionBarStyle</item>
        <item name="android:actionBarTabTextStyle">@style/GiftActionBarTabText</item>
        <item name="actionBarTabTextStyle">@style/GiftActionBarTabText</item>
    </style>

    <style name="GiftActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:displayOptions">showCustom|showHome|homeAsUp|showTitle</item>
        <item name="displayOptions">showCustom|showHome|homeAsUp|showTitle</item>
        <item name="android:background">#FF8432</item>
        <item name="android:backgroundSplit">#FFFFFF</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="GiftActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GiftMoreButton" parent="android:Widget">
        <item name="android:drawableRight">@drawable/more_button_background_right</item>
        <item name="android:textColor">@drawable/more_button_textcolor</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/more_button_background</item>
    </style>

    <style name="SearchButton" parent="android:Widget">
        <item name="android:textColor">@drawable/more_button_textcolor</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="SearchButtonRed" parent="SearchButton">
        <item name="android:background">@drawable/button_red</item>
    </style>

    <style name="SearchButtonBlue" parent="SearchButton">
        <item name="android:background">@drawable/button_blue</item>
    </style>

    <style name="SearchButtonPink" parent="SearchButton">
        <item name="android:background">@drawable/button_pink</item>
    </style>

    <style name="SearchButtonPurple" parent="SearchButton">
        <item name="android:background">@drawable/button_purple</item>
    </style>

    <style name="SearchButtonYellow" parent="SearchButton">
        <item name="android:background">@drawable/button_yellow</item>
    </style>

</resources>